{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "revision": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.image-text"
      ]
    },
    "subtitle": {
      "type": "string"
    },
    "abstract": {
      "type": "text"
    },
    "keywords": {
      "type": "component",
      "repeatable": true,
      "component": "article.keyword"
    },
    "authors": {
      "type": "component",
      "repeatable": true,
      "component": "article.authors"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "revisionDate": {
      "type": "date",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "downloads": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "references": {
      "type": "component",
      "repeatable": true,
      "component": "article.references"
    },
    "identifier": {
      "type": "string",
      "regex": "[A-Za-z0-9-]+",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "guplayId": {
      "type": "string"
    },
    "citeAs": {
      "type": "text"
    }
  }
}
